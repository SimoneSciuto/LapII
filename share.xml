<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/android_fb"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ciao Utente"
        android:id="@+id/saluto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorBluePrincipale" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Punti acquisiti = "
        android:id="@+id/punti"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBluePrincipale"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In questa pagina puoi vedere quanti punti hai acquisito!"
        android:id="@+id/textView3"
        android:layout_below="@+id/saluto"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hai 100 punti per ogni amico che ha conosciuto l&apos;app tramite te e le tue condivisioni su Facebook!"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textStyle="italic" />
</RelativeLayout>